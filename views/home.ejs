<%- include ('templates/header'); -%>
<div class='container'>
    <div class='jumbotron'>
        <h1>Welcome to Trivia</h1>
        <a class='btn' href='/login'>Login</a>
		<a class='btn' href='/register'>Register</a>
    </div>
</div>

<!-- Search data without login -->
<div class='container'>
    <form action='/anonTrivia' method='POST'>
    	<div class='jumbotron'>
	    	<h1>Search without login</h1>
	    	<div class='form-group row'>
	    		<label for='number' class='col-sm-4 col-form-label'>Number</label>
	    		<div class='col-sm-4'>
	    			<input type="number" class='form-control' id="quantity" name="quantity" min="1" max="30" placeholder='30 number max'>
	    			</div>
			</div>
			<div class='form-group row'>
				<label for='categories' class='col-sm-4 col-form-label'>Category</label>
				<div class='col-sm-4'>
					<select name="categories">
						<option value="none"></option>   
						<%categories.forEach(function(c){%>
							<option value="<%=c%>"><%=c%></option>
			        	<%});%>
			    	</select>
				</div>
	    	</div>
	    
		    <div class='form-group row'>
				<label for='difficult' class='col-sm-4 col-form-label'>Difficult</label>
				<div class='col-sm-4'>
				    <select name="gender">
						<option value="none"></option>
						<option value='E'>Easy</option>
						<option value='M'>Medium</option>
						<option value='H'>Hard</option>
					</select>
				</div>
		    </div>
		    
		    <div class='form-group row'>
				<label for='multiple' class='col-sm-4 col-form-label'>Multiple choice or True & False</label>
				<div class='col-sm-4'>
				    <select name="gender">
						<option value="none"></option>
						<option value='MC'>Multiple Choice</option>
						<option value='TF'>True or False</option>
					</select>
				</div>
		    </div>
		    
		    <div class='jumbotron'>
		        <input class='btn' type="submit" value="Submit">
		    </div>
    	</div>
    </form>
</div>
<%- include ('templates/footer'); -%>